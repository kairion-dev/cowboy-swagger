
{erl_opts,
 [
  {src_dirs, ["src"]}
 ]
}.

{deps_dir, "deps"}.
{deps,
 [
  {jiffy,  {git, "https://github.com/davisp/jiffy.git", {tag, "0.14.2"}}},
  {trails, {git, "https://github.com/inaka/cowboy-trails.git", {tag, "0.1.0"}}}
 ]
}.

{plugins, [pc]}.

{provider_hooks,
  [
    {pre,
      [
        {compile, {pc, compile}},
        {clean, {pc, clean}}
      ]
    }
  ]
}.

{xref_warnings, true}.
{xref_checks,
  [
    undefined_function_calls
  , locals_not_used
  , deprecated_function_calls
  , deprecated_functions
  ]
}.
